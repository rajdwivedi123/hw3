<h1>Add a New Entry for <%= @place.name %></h1>

<form action="/places/<%= @place.id %>/entries" method="post">

  <p>
    <label for="entry_title">Title:</label>
    <input type="text" id="entry_title" name="entry[title]">
  </p>

  <p>
    <label for="entry_description">Description:</label>
    <textarea id="entry_description" name="entry[description]"></textarea>
  </p>

  <p>
    <label for="entry_posted_on">Date:</label>
    <input type="date" id="entry_posted_on" name="entry[posted_on]">
  </p>

  <p>
    <input type="submit" value="Create Entry">
  </p>
</form>

<p>
  <a href="/places/<%= @place.id %>">Back to <%= @place.name %></a>
</p>
